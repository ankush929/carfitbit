<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#000"
        android:layout_alignParentTop="true"
        android:layout_height="match_parent"
        tools:context=".TyreActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/app_bar"
            android:layout_alignParentTop="true"
            android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.AppBarOverlay" android:baselineAligned="false"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/carImage" android:layout_below="@id/app_bar"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"

    />
    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/carImage1" android:layout_below="@id/carImage"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"

    />

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/carImage1"
            android:text="Tyre Front Left :"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="#fff"
            android:id="@+id/top_left_text"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_left_text"
            android:text="Air Pressure Low!"
            android:textSize="12sp"
    android:gravity="center"
    android:textColor="@android:color/holo_red_dark"
    android:id="@+id/top_left_text_value"
    android:layout_alignParentStart="true"
            android:drawableEnd="@drawable/check_tyre_icon"
            android:drawablePadding="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
    />
    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/carImage1"
            android:id="@+id/top_right_text"
            android:text="Tyre Front Right :"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#fff"
            android:layout_toEndOf="@+id/top_left_text"
            android:layout_alignParentEnd="true" android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_right_text"
            android:id="@+id/top_right_text_value"
            android:text="Air Pressure Low!"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_toEndOf="@+id/top_left_text_value"
            android:layout_alignParentEnd="true"
android:drawableEnd="@drawable/check_tyre_icon"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
    />
    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_left_text_value"
            android:text="Tyre Rear Left :"
            android:textSize="12sp"
            android:textColor="#fff"
            android:id="@+id/rear_left_text"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" android:layout_marginStart="15dp"
    android:layout_marginBottom="5dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rear_left_text"
            android:text="All Good!"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@android:color/holo_green_light"
            android:id="@+id/rear_left_text_value"
            android:layout_marginStart="15dp"
            android:drawableEnd="@drawable/tyre_good"
            android:drawablePadding="68dp"
    />
    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_left_text_value"
            android:text="Tyre Rear Right : "
            android:textSize="12sp"
            android:textColor="#fff"
            android:layout_toEndOf="@+id/rear_left_text"
            android:id="@+id/rear_right_text"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp" />

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rear_right_text"
            android:id="@+id/rear_right_text_value"
            android:text="All Good!"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@android:color/holo_green_light"
            android:layout_toEndOf="@+id/rear_left_text_value"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/tyre_good"
    />

    <!--<android.support.v7.widget.AppCompatTextView-->
