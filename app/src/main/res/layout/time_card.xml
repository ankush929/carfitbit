<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="#fff"
                android:id="@+id/time_include_in"
                android:layout_height="match_parent">

    <TextView
            android:id="@+id/monday_text"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Monday:"
            android:textStyle="bold"
            android:layout_marginEnd="25dp"
            android:textSize="12sp"/>
    <TextView

            android:id="@+id/monday_value_text"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="10:30AM-10PM"
            android:textSize="12sp"
            android:textStyle="bold"

            android:layout_alignParentEnd="true"
            android:layout_marginEnd="70dp"
    />

    <TextView
            android:id="@+id/tuesday_text"
            android:layout_below="@+id/monday_text"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Tuesday:" android:textStyle="bold"

            android:layout_alignParentStart="true"
            android:layout_marginEnd="25dp"
            android:textSize="12sp"/>
    <TextView

            android:id="@+id/tuesday_value_text"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="10:30AM-10PM" android:textStyle="bold"

            android:layout_alignParentRight="true"
            android:layout_below="@+id/monday_value_text"
            android:layout_marginEnd="70dp"
            android:textSize="12sp"
    />

    <TextView
            android:id="@+id/wednesday_text" android:textStyle="bold"

            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Wednesday:"
            android:layout_marginEnd="25dp"
            android:layout_below="@+id/tuesday_text"
            android:textColor="@android:color/holo_green_light"
            android:layout_alignParentStart="true"
            android:textSize="12sp"/>
    <TextView

            android:id="@+id/wednesday_value_text"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="10:30AM-10PM"
            android:layout_below="@+id/tuesday_value_text"
            android:layout_alignParentEnd="true"
            android:textSize="12sp" android:textStyle="bold"
            android:textColor="@android:color/holo_green_light"
            android:layout_marginEnd="70dp"
    />

    <TextView
            android:id="@+id/Thursday_text"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Thursday:" android:textStyle="bold"

            android:layout_marginEnd="25dp"
            android:layout_below="@+id/wednesday_text"
            android:layout_alignParentStart="true"
            android:textSize="12sp"/>
    <TextView

            android:id="@+id/thursday_value_text"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="10:30AM-10PM"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="70dp"
            android:layout_below="@+id/wednesday_value_text"
            android:layout_marginStart="35dp" android:textStyle="bold"

    />

    <TextView
            android:id="@+id/friday_text"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Friday:"
            android:layout_marginEnd="25dp"
            android:layout_alignParentStart="true" android:textStyle="bold"

            android:layout_below="@+id/Thursday_text"
            android:textSize="12sp"/>
    <TextView

            android:id="@+id/friday_value_text" android:textStyle="bold"

            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="10:30AM-10PM"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/Thursday_text"
            android:layout_marginEnd="70dp"
            android:layout_marginStart="35dp"
    />

    <TextView
            android:id="@+id/saturday_text"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Saturday:" android:textStyle="bold"

            android:layout_marginEnd="25dp"
            android:layout_below="@+id/friday_text"
            android:layout_alignParentStart="true"
            android:textSize="12sp"/>
    <TextView

            android:id="@+id/saturday_value_text"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="10:30AM-10PM"
            android:layout_alignParentEnd="true" android:textStyle="bold"

            android:layout_below="@+id/friday_text"
            android:layout_marginEnd="70dp"
            android:textSize="12sp"
            android:layout_marginStart="35dp"
    />

    <TextView
            android:id="@+id/sunday_text"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Sunday:"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/saturday_text" android:textStyle="bold"

            android:layout_marginEnd="25dp"
            android:textSize="12sp"/>
    <TextView

            android:id="@+id/sunday_value_text"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="10:30AM-10PM"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="70dp"
            android:layout_below="@+id/saturday_value_text"
            android:layout_marginStart="35dp" android:textStyle="bold"

    />


</RelativeLayout>
